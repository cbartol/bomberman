<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ist.meic.bomberman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ist.meic.bomberman.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ist.meic.bomberman.SingleplayerActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:parentActivityName="ist.meic.bomberman.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ist.meic.bomberman.MainActivity" />
        </activity>
        <activity
            android:name="ist.meic.bomberman.multiplayer.MultiplayerActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:parentActivityName="ist.meic.bomberman.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ist.meic.bomberman.MainActivity" />
        </activity>
        <activity
            android:name="ist.meic.bomberman.GameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game"
            android:screenOrientation="portrait"
            android:parentActivityName="ist.meic.bomberman.SingleplayerActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ist.meic.bomberman.SingleplayerActivity" />
        </activity>
        <activity
            android:name="ist.meic.bomberman.multiplayer.CreateServerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_create_server"
            android:screenOrientation="portrait"
            android:parentActivityName="ist.meic.bomberman.multiplayer.MultiplayerActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ist.meic.bomberman.MultiplayerActivity" />
        </activity>
        <activity
            android:name="ist.meic.bomberman.multiplayer.FindServerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_find_server"
            android:screenOrientation="portrait"
            android:parentActivityName="ist.meic.bomberman.multiplayer.MultiplayerActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ist.meic.bomberman.MultiplayerActivity" />
        </activity>
        <activity
        	android:name="ist.meic.bomberman.multiplayer.MultiplayerClientGameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_client_game"
            android:screenOrientation="portrait"
            android:parentActivityName="ist.meic.bomberman.multiplayer.FindServerActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ist.meic.bomberman.FindServerActivity" />
        </activity>
        <activity
  			android:name="ist.meic.bomberman.multiplayer.MultiplayerServerGameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_server_game"
    		android:parentActivityName="ist.meic.bomberman.multiplayer.CreateServerActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ist.meic.bomberman.CreateServerActivity" />
        </activity>
    </application>

</manifest>
